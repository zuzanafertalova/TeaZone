<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupFirmaActivity">

    <EditText
        android:id="@+id/tvSignupFirmaEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="124dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/pswdSignupFirmaPswrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/tvSignupFirmaEmail"
        app:layout_constraintTop_toBottomOf="@+id/tvSignupFirmaEmail" />

    <EditText
        android:id="@+id/pswdSignupFirmaConfirmPswrd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:hint="Confirm password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/pswdSignupFirmaPswrd"
        app:layout_constraintTop_toBottomOf="@+id/pswdSignupFirmaPswrd" />

    <Button
        android:id="@+id/btnSignupFirma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="56dp"
        android:text="Sign Up"
        app:layout_constraintStart_toStartOf="@+id/tvSignupFirmaICO"
        app:layout_constraintTop_toBottomOf="@+id/tvSignupFirmaICO" />

    <EditText
        android:id="@+id/tvSignupFirmaICO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="ICO"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/pswdSignupFirmaConfirmPswrd"
        app:layout_constraintTop_toBottomOf="@+id/pswdSignupFirmaConfirmPswrd" />

</androidx.constraintlayout.widget.ConstraintLayout>