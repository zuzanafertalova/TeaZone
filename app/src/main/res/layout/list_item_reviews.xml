<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/btnStarReview1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5sp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/profilePicReviews"
        app:layout_constraintTop_toBottomOf="@+id/tvMenoUseraReviews"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnStarReview5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5sp"
        android:layout_marginEnd="15sp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnStarReview4"
        app:layout_constraintTop_toBottomOf="@+id/tvMenoUseraReviews"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnStarReview4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5sp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnStarReview3"
        app:layout_constraintTop_toBottomOf="@+id/tvMenoUseraReviews"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnStarReview3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5sp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnStarReview2"
        app:layout_constraintTop_toBottomOf="@+id/tvMenoUseraReviews"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnStarReview2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="5sp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/btnStarReview1"
        app:layout_constraintTop_toBottomOf="@+id/tvMenoUseraReviews"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvMenoUseraReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Meno usera"
        android:textColor="@color/colorGreyLogo"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicReviews"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="15sp"
        android:layout_weight="1"
        app:civ_border_color="@color/colorGrey"
        app:civ_border_width="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/tvReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="5sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Obsah hodnotenia"
        android:textColor="@color/colorGrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.005"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStarReview1"
        app:layout_constraintVertical_bias="0.163" />
</androidx.constraintlayout.widget.ConstraintLayout>