<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileScreenFragments.PostReviewFragment">

    <Button
        android:id="@+id/btnStar1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/tvReviewContent"
        app:layout_constraintEnd_toStartOf="@+id/btnStar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStar2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/tvReviewContent"
        app:layout_constraintEnd_toStartOf="@+id/btnStar3"
        app:layout_constraintStart_toEndOf="@+id/btnStar1"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStar3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/tvReviewContent"
        app:layout_constraintEnd_toStartOf="@+id/btnStar4"
        app:layout_constraintStart_toEndOf="@+id/btnStar2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStar4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/tvReviewContent"
        app:layout_constraintEnd_toStartOf="@+id/btnStar5"
        app:layout_constraintStart_toEndOf="@+id/btnStar3"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStar5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/ic_star_border_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/tvReviewContent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnStar4"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/tvReviewContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Sem napíš recenziu"
        android:inputType="textPersonName"
        android:textColor="#CACACA"
        android:textColorHint="#CACACA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.157" />

    <Button
        android:id="@+id/btnPostReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_turquoise"
        android:fontFamily="@font/source_sans_pro"
        android:text="Odoslať"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReviewContent"
        app:layout_constraintVertical_bias="0.06" />

</androidx.constraintlayout.widget.ConstraintLayout>