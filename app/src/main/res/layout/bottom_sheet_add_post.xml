<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20sp">

    <TextView
        android:id="@+id/tvPridatPrispevok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:text="PRIDAŤ PRÍSPEVOK"
        android:gravity="center"
        android:textColor="@color/colorGreenLogo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tvPostContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/source_sans_pro"
        android:hint="Napíšte niečo..."
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnChoosePic"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_grey"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginTop="40sp"
        android:text="Pridať fotku"
        android:textColor="@color/colorGreyLogo"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ivChoosenPic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="@drawable/textview_border_green" />

    <Button
        android:id="@+id/btnPostPost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="@drawable/button_turquoise"
        android:fontFamily="@font/source_sans_pro"
        android:text="ZDIEĽAŤ"
        android:textColor="@color/white" />

</LinearLayout>