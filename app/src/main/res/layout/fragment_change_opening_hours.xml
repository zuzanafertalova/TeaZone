                android:layout_height="40sp"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="PO"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvUtorok"
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="UT"
                android:textStyle="bold" />

            <TextView
