                android:layout_height="40sp"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="NE"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="110sp"
            android:layout_height="match_parent"
            android:orientation="vertical">

