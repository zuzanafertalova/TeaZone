<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CDCDCD"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#CDCDCD"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="#CDCDCD"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRestauraciaFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/search_rectangle_white"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="Reštaurácia"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvBarFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/search_rectangle_white"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="Bar"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvKrcmaFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/search_rectangle_white"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="Pub/krčma"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvKaviarenFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/search_rectangle_white"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="Kaviareň"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="#CDCDCD"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvCukrarenFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/search_rectangle_white"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="Cukráreň"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvRychleObcerstvenieFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/search_rectangle_white"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="Rýchle občerstvenie"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvVinarenFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/search_rectangle_white"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="Vináreň"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvCajovnaFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:background="@drawable/search_rectangle_white"
                android:fontFamily="@font/source_sans_pro"
                android:gravity="center"
                android:text="Čajovňa"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnConfirmFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:layout_weight="1"
        android:background="@drawable/button_turquoise"
        android:fontFamily="@font/source_sans_pro"
        android:text="POTVRDIŤ"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>